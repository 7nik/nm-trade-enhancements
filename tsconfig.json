{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"sourceMap": false,
		"inlineSources": false,
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "nodenext",
		"isolatedModules": true,
	},
	"exclude": ["./packages/*", "./node_modules/*"],
}
